<p id="notice"><%= notice %></p>

<h1 class="text-center">Your cocktail list</h1>

<%= link_to 'New Cocktail', new_cocktail_path, class: "btn btn-primary" %>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card text-center">
          <div class="card-header">
            <%= image_tag cocktail.photo.url(:standard)%>
          </div>
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
          <%= link_to 'Edit', edit_cocktail_path(cocktail) %>
          <%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <%end%>
  </div>
</div>



